// Online C++ compiler to run C++ program online
#include <iostream>
using namespace std;

int main() {
    // Write C++ code here
    int n = 7;
    
    for(int i=1;i<=n;i++)
    {
        if(i==(n/2)+1)
        {
            for(int j=0; j<n; j++)
            {
                cout<<" *";
            }
            cout<<endl;
        }
        else
        {
            // for loop for spaces
            for(int i=0;i<(n/2); i++)
            {
                cout<<"  ";
            }
            cout<<" *";
            cout<<endl;
        }
    }

    return 0;
}
